
# Kconfig file for package ST7789
menuconfig PKG_USING_ST7789
    bool "Please add description of ST7789 in English."
    default n

if PKG_USING_ST7789

    config PKG_ST7789_PATH
        string
        default "/packages/peripherals/ST7789"

    choice
        prompt "Version"
        default PKG_USING_ST7789_LATEST_VERSION
